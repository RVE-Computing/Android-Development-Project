<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_segundo_plato">

    <Button
        android:id="@+id/bt_Macedonia"
        android:layout_width="200"
        android:layout_height="50"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="185dp"
        android:onClick="hamburguesa"
        android:text="@string/bt_Hamburguesa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_tartaQueso"
        android:layout_width="200"
        android:layout_height="50"
        android:onClick="ensalada"
        android:text="@string/bt_Ensalada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_Macedonia" />

    <Button
        android:id="@+id/bt_Churros"
        android:layout_width="200"
        android:layout_height="50"
        android:onClick="salmon"
        android:text="@string/bt_Salmon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_tartaQueso" />

</androidx.constraintlayout.widget.ConstraintLayout>